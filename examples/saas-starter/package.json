{
  "name": "saas-starter",
  "version": "1.0.0",
  "description": "Full-stack SaaS application with authentication, payments, and real-time updates",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
    "dev:api": "nest start --watch",
    "dev:ui": "vite",
    "build": "npm run build:api && npm run build:ui",
    "build:api": "nest build",
    "build:ui": "vite build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "ts-node scripts/migrate.ts",
    "db:seed": "ts-node scripts/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/jwt": "^12.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/websockets": "^10.4.20",
    "@nestjs/platform-socket.io": "^10.4.20",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "^14.0.0",
    "prisma": "^5.0.0",
    "@prisma/client": "^5.0.0",
    "@stripe/stripe-js": "^1.46.0",
    "stripe": "^13.0.0",
    "pg": "^8.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.1.0",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.20",
    "@types/bcrypt": "^5.0.0",
    "typescript": "^5.2.0",
    "vitest": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "vite": "^5.0.0",
    "tailwindcss": "^3.3.0",
    "shadcn-ui": "^0.0.4",
    "@nestjs/cli": "^10.0.0",
    "ts-node": "^10.9.1",
    "concurrently": "^8.2.0",
    "prettier": "^3.0.0",
    "eslint": "^8.50.0"
  }
}
