# Gemini (default provider)
GEMINI_API_KEY=your_gemini_api_key

# Optional LLM providers
OPENAI_API_KEY=your_openai_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Anthropic-compatible endpoints (optional)
ANTHROPIC_AUTH_TOKEN=your_proxy_bearer_token
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_VERSION=2023-06-01

# Default LLM configuration (optional overrides)
# Accepts: gemini | openai | openrouter | anthropic
DEFAULT_LLM_PROVIDER=gemini
DEFAULT_MODEL=gemini-2.5-pro

# ========================================
# ENHANCED VIBE-CHECK CONFIGURATION
# ========================================

# Per-project storage directory
# When set, vibe-check stores history.json and vibe-log.json here
# instead of ~/.vibe-check/
# Example: /Users/username/my-project/.vibe-check
VIBE_CHECK_STORAGE_DIR=

# Constitutional rules file path
# Path to JSON file with project-specific constitutional rules
# Supports inheritance from base rules via "extends" field
# Example: /Users/username/my-project/.vibe-check/constitutional-rules.json
VIBE_CHECK_RULES_FILE=

# Auto-discovery (if VIBE_CHECK_RULES_FILE not set):
# 1. ${VIBE_CHECK_STORAGE_DIR}/constitutional-rules.json
# 2. ~/.vibe-check/constitutional-rules.json
# 3. Falls back to empty rule set if not found

# Hot reload constitutional rules on file change
# When enabled, the MCP server watches the rules file and automatically
# reloads when changes are detected (no restart required)
# Default: false
VIBE_CHECK_HOT_RELOAD=false
